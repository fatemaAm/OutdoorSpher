<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:background="#8BC34A"
    android:gravity="center|top"
    android:orientation="vertical"
    tools:context=".LongDistanceHikingActivity">

    <!-- Add ScrollView to wrap the entire content -->
    <android.widget.ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <!-- LinearLayout now resides inside the ScrollView -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtnamerun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:fontFamily="@font/aclonica"
                android:textSize="16sp" />

    <ImageView
        android:id="@+id/imgrun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:srcCompat="@drawable/ic_launcher_foreground" />

            <TextView
                android:id="@+id/txtinm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:fontFamily="@font/aclonica"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtrun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:fontFamily="@font/aclonica"
                android:textSize="16sp" />
</androidx.appcompat.widget.LinearLayoutCompat>

    </android.widget.ScrollView>

    </androidx.appcompat.widget.LinearLayoutCompat>
